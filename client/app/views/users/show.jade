section(class=" container login" ng-controller="UserController as userCtrl")
    div.row
        div.col-sm-6.col-md-4.col-md-offset-4
            h3 Mostrar {{userCtrl.title}}
            table.table
                tbody
                    tr
                        td Id
                        td {{userCtrl.user._id}}
                    tr
                        td Nombre
                        td {{userCtrl.user.firstName}}
                    tr
                        td Apellido
                        td {{userCtrl.user.lastName}}
                    tr
                        td Usuario
                        td {{userCtrl.user.username}}